@page "/book/{ServiceId:guid}"
@attribute [Authorize]
@inject IServiceApiService  ServiceService
@inject IBookingService     BookingService
@inject NavigationManager   Nav
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Book Service â€” Bookify</PageTitle>

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <a href="/services"
       class="inline-flex items-center gap-1 text-sm text-gray-400 hover:text-primary-600 mb-6 transition-colors">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to services
    </a>

    @if (_loading)
    {
        <LoadingSpinner Message="Loading service details..." />
    }
    else if (_service is null)
    {
        <EmptyState Icon="âŒ" Title="Service not found"
                    Message="This service may no longer be available."
                    ActionHref="/services" ActionLabel="Browse Services" />
    }
    else
    {
        <!-- Service Summary -->
        <div class="bg-white rounded-2xl border border-gray-100 p-6 mb-6">
            <div class="flex items-start justify-between mb-4">
                <div class="flex-1 pr-4">
                    <h1 class="text-2xl font-bold text-gray-900">@_service.Name</h1>
                    <p class="text-gray-400 text-sm mt-1">@_service.Description</p>
                </div>
                <div class="text-right shrink-0">
                    <p class="text-2xl font-bold text-primary-600">$@_service.Price.ToString("F2")</p>
                    <p class="text-xs text-gray-400">@_service.Duration min session</p>
                </div>
            </div>
            <div class="flex items-center gap-2 text-sm text-gray-500 border-t border-gray-50 pt-4">
                <svg class="w-4 h-4 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Staff: <span class="font-semibold text-gray-700 ml-1">@_service.StaffName</span>
            </div>
        </div>

        <!-- Booking Form -->
        <div class="bg-white rounded-2xl border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-5">Select Date & Time</h2>

            <AlertMessage Message="@_error"   Type="error" />
            <AlertMessage Message="@_success" Type="success" />

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1.5">Date</label>
                    <input type="date"
                           value="@_selectedDate.ToString("yyyy-MM-dd")"
                           @onchange="OnDateChanged"
                           min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")"
                           class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-primary-300 text-sm" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1.5">Time</label>
                    <input type="time"
                           value="@_selectedTime.ToString(@"hh\:mm")"
                           @onchange="OnTimeChanged"
                           class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-primary-300 text-sm" />
                </div>

                <button @onclick="HandleBooking" disabled="@_booking"
                        class="w-full py-4 bg-primary-600 hover:bg-primary-700 disabled:opacity-60 text-white font-bold rounded-xl text-sm transition-all flex items-center justify-center gap-2 mt-2">
                    @if (_booking)
                    {
                        <div class="w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                        <span>Confirming...</span>
                    }
                    else
                    {
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <span>Confirm Booking</span>
                    }
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public Guid ServiceId { get; set; }

    private ServiceModel? _service;
    private bool          _loading      = true;
    private bool          _booking      = false;
    private string        _error        = string.Empty;
    private string        _success      = string.Empty;
    private DateTime      _selectedDate = DateTime.Today.AddDays(1);
    private TimeSpan      _selectedTime = new TimeSpan(9, 0, 0);

    protected override async Task OnInitializedAsync()
    {
        _service = await ServiceService.GetByIdAsync(ServiceId);
        _loading = false;
    }

    private void OnDateChanged(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var d))
            _selectedDate = d;
    }

    private void OnTimeChanged(ChangeEventArgs e)
    {
        if (TimeSpan.TryParse(e.Value?.ToString(), out var t))
            _selectedTime = t;
    }

    private async Task HandleBooking()
    {
        _error = _success = string.Empty;

        if (_selectedDate <= DateTime.Today)
        {
            _error = "Please select a future date.";
            return;
        }

        _booking = true;
        StateHasChanged();

        var authState   = await AuthStateProvider.GetAuthenticationStateAsync();
        var clientIdStr = authState.User.FindFirst("sub")?.Value
                       ?? authState.User.FindFirst("nameid")?.Value;

        if (!Guid.TryParse(clientIdStr, out var clientId))
        {
            _error   = "Authentication error. Please log in again.";
            _booking = false;
            return;
        }

        var request = new CreateBookingRequest
        {
            ClientId  = clientId,
            ServiceId = _service!.Id,
            StaffId   = _service.StaffId,
            Date      = _selectedDate,
            Time      = _selectedTime
        };

        var id = await BookingService.CreateAsync(request);

        if (id.HasValue)
        {
            _success = "ðŸŽ‰ Booking confirmed! Redirecting...";
            StateHasChanged();
            await Task.Delay(1500);
            Nav.NavigateTo("/my-bookings");
        }
        else
        {
            _error   = "This time slot may already be taken. Please try a different time.";
            _booking = false;
        }
    }
}
