<div class="bg-white rounded-2xl border border-gray-100 overflow-hidden hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200 group flex flex-col">
    <!-- Top color band -->
    <div class="h-1.5 bg-gradient-to-r from-primary-400 to-primary-600"></div>

    <div class="p-5 flex flex-col flex-1">

        <!-- Title + Price -->
        <div class="flex items-start justify-between mb-2">
            <h3 class="font-semibold text-gray-900 text-base leading-snug flex-1 pr-2">
                @Service.Name
            </h3>

            <span class="text-base font-bold text-primary-600 whitespace-nowrap">
                $@Service.Price.ToString("F0")
            </span>
        </div>

        <!-- Description -->
        <p class="text-gray-400 text-sm mb-4 line-clamp-2 flex-1">
            @Service.Description
        </p>

        <!-- Info Row -->
        <div class="space-y-2 mb-4 text-xs text-gray-500">

            <!-- Duration -->
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-1">
                    <svg class="w-3.5 h-3.5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>Duration</span>
                </div>
                <span class="font-medium text-gray-700">
                    @Service.Duration min
                </span>
            </div>

            <!-- Availability -->
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-1">
                    <svg class="w-3.5 h-3.5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M8 7V3m8 4V3m-9 8h10m-11 9h12a2 2 0 002-2V7a2 2 0 00-2-2h-1V3m-8 2V3H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span>Available</span>
                </div>
                <span class="font-medium text-gray-700">
                    @DateTime.Today.Add(Service.StartTime).ToString("hh:mm tt")
                    -
                    @DateTime.Today.Add(Service.EndTime).ToString("hh:mm tt")
                </span>
            </div>

            <!-- Staff -->
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-1">
                    <svg class="w-3.5 h-3.5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    <span>Staff</span>
                </div>
                <span class="font-medium text-gray-700">
                    @Service.StaffName
                </span>
            </div>

        </div>

        <!-- Button -->
        <a href="/book/@Service.Id"
           class="block w-full text-center py-2.5 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-xl text-sm transition-colors">
            Book Now
        </a>

    </div>
</div>

@code {
    [Parameter] public ServiceModel Service { get; set; } = default!;
}