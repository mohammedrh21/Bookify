@page "/admin/categories"
@attribute [Authorize(Roles = "Admin")]
@inject ICategoryService CategoryService

<PageTitle>Categories â€” Bookify Admin</PageTitle>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Categories</h1>
            <p class="text-gray-400 mt-1">Organize your services into categories</p>
        </div>
        <button @onclick="() => _showForm = !_showForm"
                class="inline-flex items-center px-5 py-2.5 bg-primary-600 text-white font-semibold rounded-xl text-sm hover:bg-primary-700 transition-colors gap-2">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Category
        </button>
    </div>

    <AlertMessage Message="@_message" Type="@_msgType" />

    @if (_showForm)
    {
        <div class="bg-white rounded-2xl border border-primary-200 p-6 mb-6 shadow-sm">
            <h2 class="font-semibold text-gray-900 mb-4">âž• New Category</h2>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                    <input @bind="_newCategory.Name" placeholder="e.g. Dentistry"
                           class="w-full px-4 py-3 rounded-xl border border-gray-200 text-sm focus:outline-none focus:ring-2 focus:ring-primary-300" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Icon (emoji)</label>
                    <input @bind="_newCategory.Icon" placeholder="ðŸ¦·"
                           class="w-full px-4 py-3 rounded-xl border border-gray-200 text-sm focus:outline-none focus:ring-2 focus:ring-primary-300" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <input @bind="_newCategory.Description" placeholder="Short description"
                           class="w-full px-4 py-3 rounded-xl border border-gray-200 text-sm focus:outline-none focus:ring-2 focus:ring-primary-300" />
                </div>
            </div>
            <div class="flex gap-3 mt-4">
                <button @onclick="CreateCategory" disabled="@_saving"
                        class="px-6 py-2.5 bg-primary-600 text-white font-semibold rounded-xl text-sm hover:bg-primary-700 disabled:opacity-60 transition-colors">
                    @(_saving ? "Creating..." : "Create")
                </button>
                <button @onclick="() => _showForm = false"
                        class="px-6 py-2.5 bg-gray-100 text-gray-700 font-semibold rounded-xl text-sm hover:bg-gray-200 transition-colors">
                    Cancel
                </button>
            </div>
        </div>
    }

    @if (_loading)
    {
        <LoadingSpinner />
    }
    else if (_categories.Count == 0)
    {
        <EmptyState Icon="ðŸ—‚ï¸" Title="No categories yet" Message="Add your first category to get started." />
    }
    else
    {
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            @foreach (var cat in _categories)
            {
                <div class="bg-white rounded-2xl border border-gray-100 p-5 flex items-center justify-between hover:border-gray-200 hover:shadow-sm transition-all">
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 bg-primary-50 rounded-xl flex items-center justify-center text-2xl">
                            @cat.Icon
                        </div>
                        <div>
                            <p class="font-semibold text-gray-900">@cat.Name</p>
                            <p class="text-xs text-gray-400 mt-0.5">@cat.Description</p>
                        </div>
                    </div>
                    <button @onclick="() => DeleteCategory(cat.Id)"
                            class="p-2 text-gray-300 hover:text-red-500 hover:bg-red-50 rounded-lg transition-colors ml-4">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </button>
                </div>
            }
        </div>

        <p class="text-xs text-gray-400 text-right mt-4">@_categories.Count categories total</p>
    }
</div>

@code {
    private List<CategoryModel> _categories  = [];
    private CategoryModel       _newCategory = new() { Icon = "ðŸ“‹" };
    private bool                _loading     = true;
    private bool                _showForm    = false;
    private bool                _saving      = false;
    private string              _message     = string.Empty;
    private string              _msgType     = "info";

    protected override async Task OnInitializedAsync()
    {
        _categories = await CategoryService.GetAllAsync();
        _loading    = false;
    }

    private async Task CreateCategory()
    {
        if (string.IsNullOrWhiteSpace(_newCategory.Name)) return;

        _saving = true;
        StateHasChanged();

        if (await CategoryService.CreateAsync(_newCategory))
        {
            _categories  = await CategoryService.GetAllAsync();
            _newCategory = new() { Icon = "ðŸ“‹" };
            _showForm    = false;
            _message     = "Category created successfully.";
            _msgType     = "success";
        }
        else
        {
            _message = "Failed to create category.";
            _msgType = "error";
        }

        _saving = false;
    }

    private async Task DeleteCategory(Guid id)
    {
        if (await CategoryService.DeleteAsync(id))
        {
            _categories = await CategoryService.GetAllAsync();
            _message    = "Category deleted.";
            _msgType    = "warning";
        }
    }
}
