<div class="flex flex-col items-center justify-center py-20 text-center">
    <div class="text-6xl mb-4">@Icon</div>
    <h3 class="text-xl font-semibold text-gray-700 mb-2">@Title</h3>
    <p class="text-gray-400 text-sm max-w-sm">@Message</p>
    @if (!string.IsNullOrEmpty(ActionHref))
    {
        <a href="@ActionHref"
           class="mt-6 inline-flex items-center px-5 py-2.5 bg-primary-600 text-white font-semibold rounded-xl text-sm hover:bg-primary-700 transition-colors">
            @ActionLabel
        </a>
    }
</div>

@code {
    [Parameter] public string Icon        { get; set; } = "ðŸ“­";
    [Parameter] public string Title       { get; set; } = "Nothing here yet";
    [Parameter] public string Message     { get; set; } = "No items to display.";
    [Parameter] public string ActionHref  { get; set; } = string.Empty;
    [Parameter] public string ActionLabel { get; set; } = "Get Started";
}
