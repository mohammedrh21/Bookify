@page "/admin/bookings"
@attribute [Authorize(Roles = "Admin")]
@inject IBookingService BookingService

<PageTitle>Manage Bookings â€” Bookify Admin</PageTitle>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Manage Bookings</h1>
        <p class="text-gray-400 mt-1">Review and update all platform bookings</p>
    </div>

    <!-- Filters -->
    <div class="flex flex-col sm:flex-row gap-3 mb-6">
        <div class="relative flex-1">
            <svg class="absolute left-3.5 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400"
                 fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input @bind="_search" @bind:event="oninput" placeholder="Search by service or client..."
                   class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 text-sm focus:outline-none focus:ring-2 focus:ring-primary-300" />
        </div>
        <select @bind="_statusFilter"
                class="px-4 py-3 rounded-xl border border-gray-200 text-sm bg-white focus:outline-none focus:ring-2 focus:ring-primary-300 min-w-[160px]">
            <option value="">All Statuses</option>
            <option value="Pending">Pending</option>
            <option value="Approved">Approved</option>
            <option value="Completed">Completed</option>
            <option value="Cancelled">Cancelled</option>
        </select>
    </div>

    <AlertMessage Message="@_message" Type="@_msgType" />

    @if (_loading)
    {
        <LoadingSpinner />
    }
    else if (Filtered.Count == 0)
    {
        <EmptyState Icon="ðŸ“­" Title="No bookings found" Message="No bookings match your filters." />
    }
    else
    {
        <div class="bg-white rounded-2xl border border-gray-100 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b border-gray-100">
                        <tr>
                            @foreach (var h in new[] { "Service", "Client", "Staff", "Date & Time", "Price", "Status", "Actions" })
                            {
                                <th class="text-left px-5 py-3 text-xs font-semibold text-gray-500 uppercase tracking-wider whitespace-nowrap">
                                    @h
                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-50">
                        @foreach (var b in Filtered)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-5 py-4 text-sm font-medium text-gray-900">@b.ServiceName</td>
                                <td class="px-5 py-4 text-sm text-gray-500">@b.ClientName</td>
                                <td class="px-5 py-4 text-sm text-gray-500">@b.StaffName</td>
                                <td class="px-5 py-4 text-sm text-gray-500 whitespace-nowrap">
                                    @b.Date.ToString("MMM dd, yyyy")
                                    <span class="text-gray-400 ml-1">@b.Time.ToString(@"hh\:mm")</span>
                                </td>
                                <td class="px-5 py-4 text-sm font-semibold text-primary-600">
                                    $@b.Price.ToString("F2")
                                </td>
                                <td class="px-5 py-4"><StatusBadge Status="@b.Status" /></td>
                                <td class="px-5 py-4">
                                    <div class="flex gap-1.5 flex-wrap">
                                        @if (b.Status == "Pending")
                                        {
                                            <button @onclick="() => Approve(b.Id)"
                                                    class="px-2.5 py-1 text-xs font-medium text-green-700 bg-green-100 hover:bg-green-200 rounded-lg transition-colors">
                                                Approve
                                            </button>
                                            <button @onclick="() => Cancel(b.Id)"
                                                    class="px-2.5 py-1 text-xs font-medium text-red-600 bg-red-100 hover:bg-red-200 rounded-lg transition-colors">
                                                Cancel
                                            </button>
                                        }
                                        @if (b.Status == "Approved")
                                        {
                                            <button @onclick="() => Complete(b.Id)"
                                                    class="px-2.5 py-1 text-xs font-medium text-blue-700 bg-blue-100 hover:bg-blue-200 rounded-lg transition-colors">
                                                Complete
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="px-5 py-3 border-t border-gray-50 text-xs text-gray-400 text-right">
                Showing @Filtered.Count of @_bookings.Count bookings
            </div>
        </div>
    }
</div>

@code {
    private List<BookingModel> _bookings     = [];
    private bool               _loading      = true;
    private string             _search       = string.Empty;
    private string             _statusFilter = string.Empty;
    private string             _message      = string.Empty;
    private string             _msgType      = "info";

    private List<BookingModel> Filtered => _bookings
        .Where(b => (string.IsNullOrEmpty(_search) ||
                     b.ServiceName.Contains(_search, StringComparison.OrdinalIgnoreCase) ||
                     b.ClientName.Contains(_search, StringComparison.OrdinalIgnoreCase)) &&
                    (string.IsNullOrEmpty(_statusFilter) || b.Status == _statusFilter))
        .OrderByDescending(b => b.Date)
        .ToList();

    protected override async Task OnInitializedAsync()
    {
        _bookings = await BookingService.GetAllBookingsAsync();
        _loading  = false;
    }

    private async Task Approve(Guid id)
    {
        if (await BookingService.ApproveAsync(id)) { UpdateStatus(id, "Approved"); SetMsg("Booking approved.", "success"); }
    }

    private async Task Cancel(Guid id)
    {
        if (await BookingService.CancelAsync(id)) { UpdateStatus(id, "Cancelled"); SetMsg("Booking cancelled.", "warning"); }
    }

    private async Task Complete(Guid id)
    {
        if (await BookingService.CompleteAsync(id)) { UpdateStatus(id, "Completed"); SetMsg("Booking completed.", "success"); }
    }

    private void UpdateStatus(Guid id, string status)
    {
        var b = _bookings.FirstOrDefault(x => x.Id == id);
        if (b is not null) b.Status = status;
    }

    private void SetMsg(string msg, string type) { _message = msg; _msgType = type; }
}
