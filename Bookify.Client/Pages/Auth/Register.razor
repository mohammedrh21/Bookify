@page "/register"
@inject IAuthService  AuthService
@inject NavigationManager Nav

<PageTitle>Sign Up â€” Bookify</PageTitle>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-50 to-blue-100 py-12 px-4">
    <div class="w-full max-w-md">
        <div class="bg-white rounded-3xl shadow-xl border border-gray-100 p-8">
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-14 h-14 bg-primary-600 rounded-2xl shadow-lg mb-3">
                    <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </div>
                <h1 class="text-2xl font-bold text-gray-900">Create account</h1>
                <p class="text-gray-400 text-sm mt-1">Join Bookify today</p>
            </div>

            <AlertMessage Message="@_error"   Type="error" />
            <AlertMessage Message="@_success" Type="success" />

            <EditForm Model="_model" OnValidSubmit="HandleRegister" class="space-y-4">
                <DataAnnotationsValidator />

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1.5">Full Name</label>
                    <InputText @bind-Value="_model.FullName"
                               class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-primary-300 text-sm"
                               placeholder="John Doe" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1.5">Email</label>
                    <InputText @bind-Value="_model.Email" type="email"
                               class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-primary-300 text-sm"
                               placeholder="you@example.com" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1.5">Phone</label>
                    <InputText @bind-Value="_model.Phone"
                               class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-primary-300 text-sm"
                               placeholder="+1 234 567 8900" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1.5">Password</label>
                    <InputText @bind-Value="_model.Password" type="password"
                               class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-primary-300 text-sm"
                               placeholder="Min 8 characters" />
                </div>

                <button type="submit" disabled="@_loading"
                        class="w-full py-3.5 bg-primary-600 hover:bg-primary-700 disabled:opacity-60 text-white font-bold rounded-xl text-sm transition-all shadow-sm flex items-center justify-center gap-2">
                    @if (_loading)
                    {
                        <div class="w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                        <span>Creating account...</span>
                    }
                    else { <span>Create Account</span> }
                </button>
            </EditForm>

            <p class="text-center text-sm text-gray-400 mt-6">
                Already have an account?
                <a href="/login" class="text-primary-600 font-semibold hover:text-primary-700">Sign in</a>
            </p>
        </div>
    </div>
</div>

@code {
    private RegisterRequest _model   = new();
    private string          _error   = string.Empty;
    private string          _success = string.Empty;
    private bool            _loading = false;

    private async Task HandleRegister()
    {
        _loading = true;
        _error = _success = string.Empty;
        StateHasChanged();

        var result = await AuthService.RegisterAsync(_model);

        if (result.IsSuccess)
        {
            _success = "Account created! Redirecting to login...";
            StateHasChanged();
            await Task.Delay(1500);
            Nav.NavigateTo("/login");
        }
        else
        {
            _error   = result.Message ?? "Registration failed.";
            _loading = false;
        }
    }
}
