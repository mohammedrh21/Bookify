            </a>
        </div>

        @if (_loadingServices)
        {
            <LoadingSpinner />
        }
        else if (_services.Count == 0)
        {
            <EmptyState Icon="üõéÔ∏è" Title="No services yet" Message="Services will appear here soon." />
        }
        else
        {
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                @foreach (var svc in _services.Take(8))
